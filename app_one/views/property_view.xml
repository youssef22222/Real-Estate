<odoo>
    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">property tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" create="1" edit="1" delete="1">
                <field name="name"/>
                <field name="postcode"/>
                <field name="owner_id"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="garden"/>
            </tree>
        </field>
    </record>

    <record id="property_view_form" model="ir.ui.view">
        <field name="name">property form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form create="1" edit="1" delete="1">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General Info.">
                            <field name="postcode"/>
                            <field name="date_availability" required="1"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="bedrooms"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                        <group string="Additional Info.">
                            <field name="owner_id"/>
                            <field name="leaving_area"/>
                            <field name="facades"/>
                            <field name="garden"/>
                            <field name="garage"/>
                            <field name="garden_area"/>
                            <field name="garden_orientation"/>
                        </group>
                        <group>
                            <field name="description" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="property_action" model="ir.actions.act_window">
        <field name="name">property action</field>
        <field name="res_model">property</field>
    </record>

    <record id="property_view_search" model="ir.ui.view">
        <field name="name">property search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="postcode"/>

                <filter name="is_garden" string="With Garden" domain="[('garden','=',True)]"/>
                <filter name="is_not_garden" string="Without Garden" domain="[('garden','!=',True)]"/>
                <filter name="is_garage" string="With Garage" domain="[('garage','=',True)]"/>

                <filter name="group_garden" string="Garden" context="{'group_by':'garden'}"/>
                <filter name="group_garage" string="Garage" context="{'group_by':'garage'}"/>
            </search>
        </field>
    </record>

    <menuitem
        id="property_menu_item"
        name="Properties"
        parent="properties_menu"
        action="property_action"
    />
</odoo>